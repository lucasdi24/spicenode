<!DOCTYPE html>

<html>

  <head>
    <%- include('./partials/_head.ejs') %> 
    <title>Home - Spice Node</title>
  </head>

  <body>
    <!-- Header -->
    <%- include('./partials/_header.ejs') %>

    <!-- Main -->
    <main class="ccIndexMaster bg-ligth">
      <section class="ccProductos container shadow py-4 px-5 bg-white">
        <h2>Nuestros productos</h2>
        <div class="row">
          <% for( let i = 0; i < products.length; i++ ) { %>
            <div class="col-6 col-lg-4">
            <div class="ccProductBox d-flex flex-wrap flex-column align-items-center">
              <a href="/products/<%= products[i].productId %> "><img src="/uploads/productsImages/<%= products[i].productImage %>" alt="<%= products[i].productName%>"></a>
              <h3><%= products[i].productName %></h3>
              <p><%= products[i].productDescription %></p>
              <p class="ccPrecio"><%= products[i].productPrice %></p>
            </div>
          </div>
          <% } %>
        </div>
      </section>

      <section class="ccCombos container shadow py-4 px-5 bg-white">
        <h2>Nuestros Combos</h2>
        <div class="row">
          <div class="col-6 col-lg-4">
            <div class="ccComboBox d-flex flex-wrap flex-column align-items-center">
              <a href="/products/2"><img src="/images/combo1.png" alt="combo_1"></a>
              <h3>Bayou Cajun</h3>
              <p>Lorem, ipsum dolor.</p>
              <p class="ccPrecio">$200</p>
            </div>
          </div>
        </div>
      </section>
    </main>


    <!-- Footer -->
    <%- include('./partials/_footer.ejs') %> 
    <!-- BSC -->
  </body>

</html>